!item [C:]
void shel_rdef ( int8_t *lpcmd, int8_t *lpdir );

!item [Binding:]
!begin_verbatim
int16_t shel_rdef (int8_t *lpcmd, int8_t *lpdir)
{
   addr_in[0] = lpcmd;
   addr_in[1] = lpdir;

   crys_if(126);
}
